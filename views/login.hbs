<body>
<section class="vh-100">
  <div class="container h-100" style="margin-top : 100px">
    <div class="align-items-center justify-content-center h-100">
   
        <form method="post" action="/auth/login" class="was-validated">
            <h1 align="center" class="text-primary">Login</h1>
 {{#if msg.register}} 
            <div class="alert alert-success alert-success alert-dismissible">
              <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
              <strong>Success!</strong> Sucessfully registred
            </div>
          {{/if}} 
          <div class="form-outline mb-4">
            <label class="form-label" for="validateemail">Email address</label>
            <input type="email" id="validateemail" class="form-control form-control-lg" name="email" pattern="[A-Za-z0-9._%+-]+@[A-Za-z0-9.-]+\.[A-Za-z]{1,63}$" autofocus required/>
            <div class="invalid-feedback">eg: name@spericorn.com</div>
          </div>
          <div class="form-outline mb-4">
            <label class="form-label" for="validatepassword">Password</label>
            <input type="password" id="validatepassword" class="form-control form-control-lg" name="password" pattern=".{8,12}" required/>

          </div>
          <br>
        <div class="form-outline mb-4">
            <button type="submit" class="btn btn-primary btn-lg btn-block">Login</button>
            <div class="d-grid gap-2">

</div>
           
          </div>
        </form>
           <div>
                 <a href="/auth/reg"><button type="submit" class="btn btn-primary btn-lg btn-block">Register</button></a> 
          </div>
    </div>
  </div>
</section>
