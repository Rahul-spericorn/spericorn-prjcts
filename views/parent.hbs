<html>
    <head>
        <title>admin login</title>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/css/bootstrap.min.css">
  <script src="https://cdn.jsdelivr.net/npm/jquery@3.6.0/dist/jquery.slim.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/js/bootstrap.bundle.min.js"></script>
    
  </head>

<body>

<section class="vh-100">

  <div class="container h-100" style="margin-top : 100px">
    <div class=" align-items-center justify-content-center h-100">
        <form method="post" action="/parent" class="was-validated">
            <h1 align="center" class="text-primary">New Parent</h1>
        <div class="form-outline mb-4">
            <label class="form-label" for="validateField">Name</label>
            <input type="text" id="validateField" class="form-control form-control-lg" name="name" placeholder="Enter your name" required autofocus/>
          </div>
           <div class="form-outline mb-4">
            <label class="form-label" for="validateField">Address</label>
            <textarea name="address" id="validateField" class="form-control form-control-lg"  rows="3" placeholder="Enter your address" required></textarea>
          </div>
                   <div class="form-outline mb-4">
            <label class="form-label" for="validateField">Student Id</label>
            <input type="date" id="validateField" class="form-control form-control-lg" name="sid"  required/>
          </div><br>

          <div class="form-outline mb-4">
            <label class="form-label" for="validateField">Phone</label>
            <input type="tel" id="validateField" class="form-control form-control-lg" name="phone" pattern="[0-9]{3}-[0-9]{3}-[0-9]{4}" placeholder="Enter your phone number" required/>
          </div>
          <div class="form-outline mb-4">
            <label class="form-label" for="validateField">Email address</label>
            <input type="email" id="validateField" class="form-control form-control-lg" pattern="[A-Za-z0-9._%+-]+@[A-Za-z0-9.-]+\.[A-Za-z]{1,63}$" name="email" placeholder="Enter your email address" required/>
          </div>

        <div class="form-outline mb-4">
            <button type="submit" class="btn btn-primary btn-lg btn-block">Add</button>
          </div>
        <br>
        </form>
    
 
    </div>
  </div>
</section>
    </body>
    </html>



  